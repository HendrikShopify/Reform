<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="canonical" href="{{ canonical_url }}">

      <link rel="icon" type="image/png" href="{{ 'Favicon.png' | asset_img_url: width: 32, height: 32 }}">
    
    <title>
      {% unless template.name == 'index' %}
        REFORM ROOM | 
      {% endunless %}
      {{ page_title }}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}  
    
    {{ content_for_header }}   

    {% render 'analytics-scripts' %}

    {{ 'normalize.css' | asset_url | stylesheet_tag }}
    {{ 'fonts.css' | asset_url | stylesheet_tag }}
    {{ 'webflow.css' | asset_url | stylesheet_tag }}
    {{ 'project.css' | asset_url | stylesheet_tag }}

    <style>

/* .preloader {
  display: "flex"!important;
} */

      </style>

    <script src="{{ 'gsap.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'ScrollTrigger.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'Flip.min.js' | asset_url }}" defer="defer"></script>
    
  </head>

  <body tr-scrollflip-element="component" class="template-{{ template | split: '.' | first }}">

    {% render 'custom-code' %}
    {% sections 'header-group' %}

    <main  class="page_main" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}
    {% section 'mini-cart' %}
    {% comment %} {% section 'quick-view' %} {% endcomment %}
    {% comment %} {% section 'predictive-search' %} {% endcomment %}

    <script>

    let project = {};
    project.moneyFormat = `{{ shop.money_format }}`;

    </script>
   
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script src="{{ 'swiper.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'global-gsap.js' | asset_url }}" defer="defer"></script>
    {% comment %} <script src="{{ 'wishlist.js' | asset_url }}" defer="defer"></script> {% endcomment %}
    <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'format-money.js' | asset_url }}" defer="defer"></script>

  </body>
</html>


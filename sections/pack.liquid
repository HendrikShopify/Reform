<section data-theme="inherit" class="section_pack">
        <div class="padding-global padding-section-small">
          <div class="pack_top u-hflex-left-top u-hflex-nowrap">
            <h2 split-heading class="pack_mobile-title u-h1">{{ section.settings.title }}</h2>
            <div img-fade-in class="pack_image overflow-hidden"><img src="{{ section.settings.image_1 | img_url: "master" }}" loading="lazy" alt=""></div>
            <div class="pack_top-content u-vflex-left-top">
              <h2 split-heading class="pack_title u-h1 hide-tablet">{{ section.settings.title }}</h2>
              <div class="pack_content u-vflex-left-top u-gap-xsmall">
                <h3 split-heading class="pack_subtitle">{{ section.settings.package_1_title }}</h3>
                <p fade-up class="max-width-xlarge">{{ section.settings.package_1_description }}</p>
                <a fade-up href="{{ section.settings.package_1_url }}">
                  <div class="u-allcaps u-primary-medium">{{ section.settings.package_1_cta }}</div>
                  <div class="button-link_underscore"></div>
                </a>
              </div>
            </div>
          </div>
          <div class="pack_bottom u-hflex-right-top u-hflex-nowrap">
            <div class="pack_middle-content u-vflex-left-top u-gap-large">
              <div class="pack_content-middle u-vflex-left-top u-gap-xsmall">
                <h3 split-heading class="pack_subtitle"> {{ section.settings.package_2_title }} </h3>
                <p fade-up class="max-width-xlarge">{{ section.settings.package_2_description }}</p>
                <a fade-up href="{{ section.settings.package_2_url }}">
                  <div class="u-allcaps u-primary-medium">{{ section.settings.package_2_cta }}</div>
                  <div class="button-link_underscore"></div>
                </a>
              </div>
              <div img-fade-in class="pack_image is--mobile"><img src="{{ section.settings.image_2 | img_url: "master" }}" loading="lazy" alt=""></div>
              <div class="pack_content-bottom u-vflex-right-top u-vflex-nowrap u-gap-xsmall">
                <h3 split-heading right-to-left class="pack_subtitle"> {{ section.settings.package_3_title }} </h3>
                <p fade-up class="max-width-xlarge u-text-align-right is--pack-paragraph">{{ section.settings.package_3_description }}</p>
                <a fade-up href="{{ section.settings.package_3_url }}">
                  <div class="u-allcaps u-primary-medium">{{ section.settings.package_3_cta }}</div>
                  <div class="button-link_underscore"></div>
                </a>
              </div>
            </div>
            <div img-fade-in class="pack_image is--desktop overflow-hidden"><img src="{{ section.settings.image_2 | img_url: "master" }}" loading="lazy" alt=""></div>
          </div>
        </div>
      </section>

      



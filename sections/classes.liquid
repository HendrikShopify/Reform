<section data-theme="inherit" class="section_classes">
        <div class="padding-global padding-section-small">
          <div class="classes_comp u-vflex-stretch-top u-gap-small">
            <h2 split-heading class="u-h1">{{  section.settings.title }}</h2>
            <div class="classes_grid u-grid-12-col">
              {% for block in section.blocks %}
              <a href="{{ block.settings.link }}" class="classes_class u-vflex-stretch-top u-gap-small">
                <div class="classes_image-wrap"><img src="{{ block.settings.image | img_url: "master" }}" loading="lazy" alt="{{ block.settings.image }}"></div>
                <div class="u-h3 u-text-align-center">{{ block.settings.title }}</div>
              </a>
             {% endfor %}
            </div>
            <div class="margin-top margin-large u-vflex-left-top u-gap-small">
              <p fade-up class="max-width-xlarge">{{ section.settings.description }}</p>
              <a fade-up href="{{ section.settings.global_link }}">
                <div class="u-allcaps u-primary-medium">{{ section.settings.cta}}</div>
                <div class="button-link_underscore"></div>
              </a>
            </div>
          </div>
        </div>
      </section>


      {% schema %}
      {
        "name": "Classes",
        "settings": [
          {
          "type": "text",
          "id": "title",
          "default": "Our classes",
          "label": "Title"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "Lorem reform dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique. Duis cursus, mi quis viverra ornare, eros dolor interdum nulla, ut commodo diam libero vitae erat. Aenean faucibus nibh et justo cursus id rutrum lorem imperdiet. Nunc ut sem vitae risus tristique posuere",
          },
          {
            "type": "text",
            "id": "cta",
            "default": "View all classes",
            "label": "CTA"
          },
          {
            "type": "url",
            "id": "global_link",
            "label": "Global link"
          }
          ],
          "blocks": [
            {
              "name": "Class",
              "type": "class",
              "settings": [{
                "type": "image_picker",
                "id": "image",
                "label": "Image"
              },
            {
              "type": "text",
              "id": "title",
              "label": "Title"
            },
            {
              "type": "url",
              "id": "url",
              "label": "Link"
            }
            ]
            }
          ]
      }
      {% endschema %}